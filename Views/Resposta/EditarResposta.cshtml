@model RespostaViewModel

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @Html.ActionLink("Back", "GetQuestaoToUpdate", "Questao", new {idQuestao = @Model.Resposta.idQuestao}, new { @class="btn btn-default"})
                <p></p>
                @using (Html.BeginForm("UpdateResposta", "Resposta", FormMethod.Post, new { @class = "form-horizontal form-material", role = "form" })) {
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @Html.HiddenFor(r => r.Resposta.idResposta)
                    @Html.HiddenFor(r => r.Resposta.idQuestao)
                    <div class="form-group">
                        <label class="col-md-12" asp-for="Resposta.NomeResposta"></label>
                        <div class="col-md-12">
                            <input asp-for="Resposta.NomeResposta" type="text" class="form-control form-control-line">
                            <span asp-validation-for="Resposta.NomeResposta" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <ul class="icheck-list">
                                <li>
                                    <input asp-for="Resposta.Correta" type="checkbox" class="check" data-checkbox="icheckbox_square-red">
                                    <label asp-for="Resposta.Correta"></label>
                                </li>
                            </ul>
                            <span asp-validation-for="Resposta.Correta" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12" asp-for="Resposta.Explicacao"></label>
                        <div class="col-md-12">
                            <textarea asp-for="Resposta.Explicacao" class="form-control form-control-line"></textarea>
                            <span asp-validation-for="Resposta.Explicacao" class="text-danger"></span>
                        </div>
                    </div>
                    <button onclick="return confirm('Are you sure you want to update the answer?');" type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                }
            </div>
        </div>
    </div>
</div>
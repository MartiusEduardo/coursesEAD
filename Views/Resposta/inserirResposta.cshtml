@model RespostaViewModel

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @Html.ActionLink("Back", "GetQuestaoToUpdate", "Questao", new {idQuestao = @Model.Questao.idQuestao}, new { @class="btn btn-default"})
                <p></p>
                @using (Html.BeginForm("CriarResposta", "Resposta", FormMethod.Post, new { @class = "form-horizontal form-material", role = "form" })) {
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input asp-for="Resposta.idQuestao" value="@Model.Questao.idQuestao" type="hidden" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12" asp-for="Resposta.NomeResposta"></label>
                        <div class="col-md-12">
                            <input asp-for="Resposta.NomeResposta" type="text" class="form-control form-control-line">
                            <span asp-validation-for="Resposta.NomeResposta" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <ul class="icheck-list">
                                <li>
                                    <input asp-for="Resposta.Correta" type="checkbox" class="check" data-checkbox="icheckbox_square-red">
                                    <label asp-for="Resposta.Correta"></label>
                                </li>
                            </ul>
                            <span asp-validation-for="Resposta.Correta" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12" asp-for="Resposta.Explicacao"></label>
                        <div class="col-md-12">
                            <input asp-for="Resposta.Explicacao" type="text" class="form-control form-control-line">
                            <span asp-validation-for="Resposta.Explicacao" class="text-danger"></span>
                        </div>
                    </div>
                    <input onclick="return confirm('Are you sure you want to add a new answer?');" class="btn btn-info" type="submit" value="Add Answer"/>
                }
            </div>
        </div>
    </div>
</div>
                                <ul class="mega-dropdown-menu row">
                                    <li class="col-lg-6 col-xlg-2 m-b-30">
                                        <h1 class="m-b-20">COURSES</h1>
                                        <!-- CAROUSEL -->
                                        <a asp-area="" asp-controller="Course" asp-action="Index" class="btn btn-info"><i class="fa fa-bars"></i> VIEW ALL COURSES </a>
                                        <!-- End CAROUSEL -->
                                    </li>
                                    <li class="col-lg-6 m-b-30">
                                        <h1 class="m-b-20">EVENTS</h1>
                                        <!-- Accordian -->
                                        <a asp-area="" asp-controller="" asp-action="" class="btn btn-info"><i class="ti-calendar"></i> VIEW ALL EVENTS </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <!-- ============================================================== -->
                        <!-- End Mega Menu -->
                        <!-- ============================================================== -->
                        <!-- ============================================================== -->
                        <!-- User Profile -->
                        <!-- ============================================================== -->
                        @await Html.PartialAsync("_LoginPartial")                        
                        <!-- ============================================================== -->
                        <!-- End User Profile -->
                        <!-- ============================================================== -->

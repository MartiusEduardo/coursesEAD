@model Subarea
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @Html.ActionLink("Back", "GetAreaToUpdate", "Area", new {idArea = @ViewData["idArea"]}, new { @class="btn btn-default"})
                <p></p>
                @using (Html.BeginForm("CriarSubarea", "Area", FormMethod.Post, new { @class = "form-horizontal form-material", role = "form" })) {
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="col-md-12">Area</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@ViewData["Area"]" class="form-control form-control-line" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Area Id</label>
                        <div class="col-md-12">
                            @Html.TextBox("idArea", @ViewData["idArea"], new {@readonly="readonly", @class="form-control form-control-line"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12" asp-for="NomeSubarea"></label>
                        <div class="col-md-12">
                            <input asp-for="NomeSubarea" type="text" class="form-control form-control-line">
                            <span asp-validation-for="NomeSubarea" class="text-danger"></span>
                        </div>
                    </div>
                    <input onclick="return confirm('Are you sure you want to add the subarea?');" class="btn btn-info" type="submit" value="Add Subarea"/>
                }
            </div>
        </div>
    </div>
</div>
@model QuestaoViewModel

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @Html.ActionLink("Back", "listarPerguntas", "Questao", new {idCourse = @Model.Course.idCourse, idSubarea = @Model.Subarea.idSubarea}, new { @class="btn btn-default"})
                <p></p>
                @using (Html.BeginForm("CriarQuestao", "Questao", FormMethod.Post, new { @class = "form-horizontal form-material", role = "form" })) {
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @Html.Hidden("idArea", @Model.Area.idArea)
                    @Html.Hidden("idSubarea", @Model.Subarea.idSubarea)
                    <div class="form-group">
                        <label class="col-md-12">Course</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@Model.Course.CourseName" class="form-control form-control-line" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Area</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@Model.Area.NomeArea" class="form-control form-control-line" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Subarea</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@Model.Subarea.NomeSubarea" class="form-control form-control-line" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12" asp-for="Questao.Pergunta"></label>
                        <div class="col-md-12">
                            <input asp-for="Questao.Pergunta" id="Pergunta" name="Pergunta" type="text" class="form-control form-control-line">
                            <span asp-validation-for="Questao.Pergunta" class="text-danger"></span>
                        </div>
                    </div>
                    <input onclick="return confirm('Are you sure you want to insert a new question?');" class="btn btn-info" type="submit" value="Add Question"/>
                }
            </div>
        </div>
    </div>
</div>
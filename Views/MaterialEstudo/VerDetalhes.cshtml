@model MaterialEstudoViewModel
<html>
    <body>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        @Html.ActionLink("Back", "ListarMaterial", "MaterialEstudo", new {idCourse = @Model.Course.idCourse, idSubarea = @Model.Subarea.idSubarea}, new { @class="btn btn-default"})
                        <div class = "form-horizontal form-material">
                            <div class="form-group">
                                <label class="col-md-12">Course</label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="@Model.Course.CourseName" class="form-control form-control-line" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Area</label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="@Model.Area.NomeArea" class="form-control form-control-line" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Subarea</label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="@Model.Subarea.NomeSubarea" class="form-control form-control-line" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12" asp-for="MaterialEstudo.Titulo"></label>
                                <div class="col-md-12">
                                    <input asp-for="MaterialEstudo.Titulo" type="text" class="form-control form-control-line" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12" asp-for="MaterialEstudo.DescricaoConteudo"></label>
                                <div class="col-md-12">
                                    @Html.Raw(@Model.MaterialEstudo.DescricaoConteudo)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>